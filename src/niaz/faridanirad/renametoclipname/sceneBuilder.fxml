<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.GridPane?>


<GridPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2"
    fx:controller="niaz.faridanirad.renametoclipname.Controller">
    <children>
        <Button fx:id="button" onAction="#setOutputFolderPath" prefWidth="100.0"
            text="Set output path!" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <Label fx:id="outputFolderPath" alignment="CENTER" prefWidth="250.0" text=""
            GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <Button fx:id="button" onAction="#setPgpassPath" prefWidth="100.0"
            text="Set .pgpass path!" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Label fx:id="pgpassPath" alignment="CENTER" prefWidth="250.0" text=""
            GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <Button fx:id="button" onAction="#setMetadataPath" prefWidth="100.0"
            text="Set metadata.csv path!" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Label fx:id="metadataPath" alignment="CENTER" prefWidth="250.0" text=""
            GridPane.columnIndex="0" GridPane.rowIndex="2" />     
        <Button fx:id="button" onAction="#loadMetadataFromDatabase" prefWidth="250.0"
            text="Create metadata.csv" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <Button fx:id="button" onAction="#copyRenamedFilesToOutputfolder" prefWidth="250.0"
            text="Copy renamed files from metadata.csv to outputfolder" GridPane.columnIndex="1" GridPane.rowIndex="5" />
    </children>
</GridPane>